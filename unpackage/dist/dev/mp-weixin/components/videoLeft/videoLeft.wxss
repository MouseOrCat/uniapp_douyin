/**
	 * 公共页面尺寸单位换算
	 * $designWidth  设计稿的基准宽度
	 */
.videoLeft {
  color: #fff;
  font-size: 32rpx;
  padding-left: 20rpx;
}
.videoLeft .music {
  width: 450rpx;
  overflow: hidden;
}
.videoLeft .music::after {
  clear: both;
  height: 0;
  content: '';
  visibility: hidden;
  display: block;
}
.videoLeft .music .music-iconfont {
  margin-right: 10rpx;
}
.videoLeft .music .music-title {
  width: 350rpx;
  overflow: hidden;
  height: 50rpx;
}
.videoLeft .music .music-title .music-view {
  width: 400rpx;
  -webkit-animation: music 4s linear 0.2s infinite;
          animation: music 4s linear 0.2s infinite;
}
.videoLeft .margin-bottom {
  margin-bottom: 20rpx;
}
@-webkit-keyframes music {
0% {
    -webkit-transform: translate3d(100%, 0, 0);
            transform: translate3d(100%, 0, 0);
}
100% {
    -webkit-transform: translate3d(-100%, 0, 0);
            transform: translate3d(-100%, 0, 0);
}
}
@keyframes music {
0% {
    -webkit-transform: translate3d(100%, 0, 0);
            transform: translate3d(100%, 0, 0);
}
100% {
    -webkit-transform: translate3d(-100%, 0, 0);
            transform: translate3d(-100%, 0, 0);
}
}

